rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ====================================================================
    // Helper Functions
    // ====================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // ====================================================================
    // User Collection Rules
    // ====================================================================

    match /users/{userId} {
      // READ: Admins can read all user documents. Users can read their own.
      allow read: if isOwner(userId) || isAdmin();

      // LIST: Only admins can list users.
      allow list: if isAdmin();

      // WRITE (Create, Update, Delete): Only admins can write to user documents.
      allow write: if isAdmin();
    }

    // ====================================================================
    // Courses Collection Rules
    // ====================================================================

    match /courses/{courseId} {
      // READ: All authenticated users can read courses.
      allow read: if isSignedIn();

      // WRITE (Create, Update, Delete): Only admins can write to course documents.
      allow write: if isAdmin();
    }
  }
}
